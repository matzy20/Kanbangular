<!DOCTYPE html>
html(lang="en")
head
  meta(charset="UTF-8")
  title Kanban - NEW User
body
  h1 New User + Kanban
  block content
    form(action="/newUser" method="POST" onsubmit="passwordAlert(event)")
      p username
      input(type="text" name="username")
      p password
      input(type="password" name="password")
      p confirm password
      input(type="password" name="confirmPassword")
      div.actions
        input(type="submit" value="submit")
    script(type='text/javascript').
      function passwordAlert(event) {
        console.log('event', event);
        var PASSWORD = event.target.password.value;
        var CONFIRMPASSWORD = event.target.confirmPassword.value;
        var USERNAME = event.target.username.value;
        //event.target.confirmPassword.value .. target = form
        //this is how you access properties on form
        //DOM docs https://developer.mozilla.org/en-US/docs/Web/API/HTMLFormElement
        //need preventDefault to cancel form submission
        //needs to be at top, if all succeeds, submit() is catch all
        event.preventDefault();
        if (PASSWORD !== CONFIRMPASSWORD){
          alert('Passwords do not match!');
          //resets form
          event.target.reset();
        } else {
          //submits form to server which takes you to index
          event.target.submit();
          }
      }

